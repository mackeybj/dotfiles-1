" ==============================================================================
" = paradigm's_.vimperatorrc                                                   =
" ==============================================================================

" ==============================================================================
" = general settings                                                           =
" ==============================================================================

set editor="uxterm -e vim"

set noautocomplete

"bmark https://encrypted.google.com/search?btnI=I%27m+Feeling+Lucky&complete=0&q=%s -title='Google feeling lucky search' -keyword=googlelucky
set defsearch=googlelucky

set gui=nonavigation

" ==============================================================================
" = mappings                                                                   =
" ==============================================================================

" use < and > to navigate tabs, elinks-style
nnoremap < gT
nnoremap > gt

" do not require arrow keys to navigte cmdline history
cnoremap <c-n> <down>
cnoremap <c-p> <up>

" scroll faster
nnoremap h 5h
nnoremap j 5j
nnoremap k 5k
nnoremap l 5l

" showing images
nnoremap x :set! permissions.default.image=2<cr>
nnoremap X :set! permissions.default.image=1<cr>

" custom css
nnoremap c :style -name paradigm * html * { background-color: #000000 !important; /* all bg */ background-image: none !important; color: #ffffff !important; /* all fg */ border-color: #ffffff !important; /* all border */ font-family: "Terminus (TTF)" !important; /*line-height: 1.0 !important;*/ } a:link { color: #aaaaaa !important; /* link fg */ background-color: #000000 !important; /* link bg  */ } input { background-color: #000000 !important; border: 1px solid #ffffff !important; /* input border  */ color: #ffffff !important; /* input fg */ font-family: "Terminus (TTF)" }<cr>

nnoremap C :styledisable -name paradigm<cr>

nnoremap v :style -name chrome * @namespace url("http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"); /*set default namespace to XUL */ tabbrowser tabpanels { background-color: black !important; } /* sometimes kill white flash - sometimes flash remains */ /* fancy stuff around tab */ .tab-background {opacity:0!important;} .tabbrowser-tab, .tabbrowser-tabs, .tabs-newtab-button, .tab-stack, .tab-content, .tab { -moz-appearance: none !important; -moz-border-image: none !important; background-image: none !important; background-color: #000000 !important; color: #ffffff !important; border-radius: 0px !important; /* square tabs */ border: 0px solid #ffffff !important; padding: 0px !important; padding-left: 1px !important; max-height: 12px !important; min-height: 12px !important; /*max-width: 200px !important;*/ font-family: "Terminus (TTF)" !important; font-size: 12px !important; } .tabbrowser-tab .tab-text[selected] { color: #000000 !important; /* selected tab foreground */ background-color: #ffffff !important; /* selected tab foreground */ } .tab-icon-image, .tab-close-button { display: none !important; }<cr>


nnoremap V :styledisable -name chrome<cr>

" noscript
nnoremap ss :noscript toggletemp<cr>
nnoremap sS :noscript toggleperm<cr>
nnoremap so :noscript popup<cr>
nnoremap si :noscript info<cr>

" clear search highlighting
nnoremap <c-l> :noh<cr>

" per-site mappings
autocmd PageLoad slashdot.org nnoremap b fRead
autocmd PageLoad slashdot.org nnoremap B FRead
autocmd PageLoad reddit.com nnoremap b fcommen
autocmd PageLoad reddit.com nnoremap B Fcommen

" mplay youtube video in mplayer
" command! -nargs=0 cclive :execute "!uxterm -e 'cd /dev/shm/; cclive -W --stream=best \""+content.location.href+"\" -O cclive-video & sleep 3 && mplayer cclive-video'"
" command! -nargs=0 cclive :execute "!uxterm -e 'cd /dev/shm/; cclive -W --stream=best \""+content.location.href+"\" -O cclive-video & sleep 3 && mplayer cclive-video'"
nnoremap gd :silent execute "!mpv '"+content.location.href+"' &"<cr>

" ==============================================================================
" = theming                                                                    =
" ==============================================================================

" note firefox chrome is set in userChrome.css

" vimperator chrome
highlight Normal background-color: black; color: white
highlight CmdLine background-color: black; color: white
highlight PromptText background-color: black; color: white
highlight InfoMsg background-color: black; color: white

highlight CompItem[selected] background-color: white; color: black

highlight Hint background-color: white; color: black
highlight HintActive background-color: white; color: black
highlight HintElem background-color: white; color: black

highlight CmdLine font-size: 12px; font-weight: normal; font-family: "Terminus (TTF)"; padding: 0 0;
highlight StatusLine font-size: 12px; font-weight: normal; font-family: "Terminus (TTF)"; padding: 0 0;
"highlight StatusLineBroken
"highlight StatusLineSecure

" ==============================================================================
" = firefox-settings                                                           =
" ==============================================================================

" do not show images automatically
" set! permissions.default.image=2

normal! <esc>
